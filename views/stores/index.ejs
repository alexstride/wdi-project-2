<h1 class="title is-size-2-tablet is-size-4-mobile">Pick a restaurant...</h1>

<div class="columns is-multiline">

  <% stores.forEach(store => { %>
    <div class="column is-one-quarter-desktop is-half-tablet">
      <a href="/stores/<%= store.id %>">
        <div class="card">
          <div class="card-content">
            <h3 class="title"><%= store.locationName %></h3>
          </div>
          <div class="card-content">
            <h4 class="subtitle"><%= store.address %></h4>
          </div>
          <div class="card-footer">
            <div class="card-footer-item">
              <p>Average score: <%= store.percentAverage %>%</p>
            </div>
          </div>
        </div>
      </a>
    </div>
  <% })
  %>

</div>
