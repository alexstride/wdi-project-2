<h1 class="title is-1">Add a New Store</h1>

<div class="columns">
  <div class="column is-half-desktop">
    <form method="POST" action="/stores">
      <div class="field">
        <label class="label">Store Location Name</label>
        <div class="control">
          <input class="input" name="locationName" type="text" required>
        </div>
      </div>
      <div class="field">
        <label class="label">Address</label>
        <div class="control">
          <input class="input" name="address" type="text" required>
        </div>
      </div>
      <button class="button is-info enforce-center">Add</button>
    </form>
  </div>
</div>
