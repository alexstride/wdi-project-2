<h1 class="title is-size-2-tablet is-size-4-mobile">Profile for <%= user.username %></h1>

<div class="columns">
  <div class="column is-3-desktop">
    <figure class="image is-128x128">
      <img src="http://bulma.io/images/placeholders/128x128.png" alt="">
    </figure>
  </div>
    <div class="column is-9-tablet">
      <% if (locals.currentUser.id === user.id) {%>
        <form method="POST" action="/implement-this">

          <div class="field">
            <label class="label">Username</label>
            <div class="control">
              <input class="input" name="username" type="text" value="<%= user.username %>" required>
            </div>
          </div>

          <div class="field">
            <label class="label">Email address</label>
            <div class="control">
              <input class="input" name="email" type="text" value="<%= user.email %>" required>
            </div>
          </div>

          <div class="field">
            <label class="label">Profile Picture URL (optional)</label>
            <div class="control">
              <input class="input" name="photo" type="text" value="<%= user.email %>" required>
            </div>
          </div>

          <div class="button-wrapper">
            <button class="button is-info enforce-center">Update</button>
          </div>

          <div class="button-wrapper">
            <a class="button is-warning" href="#">Change password</a>
          </div>

        </form>
      <%} else {%>
        <p>Username: <%= user.username %></p>
      <%}
      %>
  </div>
</div>
